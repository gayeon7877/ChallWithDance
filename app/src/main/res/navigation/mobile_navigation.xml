<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.zigzag.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.example.zigzag.ui.explore.ExploreFragment"
        android:label="@string/title_explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_permission"
        android:name="com.example.zigzag.ui.camera.PermissionFragment"
        android:label="@string/title_permission">

        <action
            android:id="@+id/action_permission_to_camera"
            app:destination="@id/navigation_camera"
            app:popUpTo="@id/navigation_home" />

    </fragment>

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.zigzag.ui.camera.CameraFragment"
        android:label="@string/title_camera"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_camera_to_permission"
            app:destination="@id/navigation_permission"
            app:popUpTo="@id/navigation_home" />

    </fragment>


    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.zigzag.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.zigzag.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>